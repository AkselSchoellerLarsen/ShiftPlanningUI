@page
@model IndexModel
@{
    ViewData["Title"] = "All Shifts";
}

<div class="container">
    <div class="row">
        <div class="col-sm">
            @for (int i = 0; i < Model.Shifts.Count; i++) {
                <a asp-page="/Shifts/Shift" asp-route-id="@Model.Shifts[i].Id">
                    <div class="card">
                        <p>Id: @Model.Shifts[i].Id</p>
                        <p>Start time: @Model.Shifts[i].Start</p>
                        <p>End time: @Model.Shifts[i].End</p>
                    </div>
                </a>
            }
        </div>
        <div class="col-sm">
            <form method="post">
                <div class="form-group">
                    <label asp-for="@Model.Start" class="control-label"></label>
                    <input asp-for="@Model.Start" class="form-control" />
                    <span asp-validation-for="@Model.Start" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.End" class="control-label"></label>
                    <input asp-for="@Model.End" class="form-control" />
                    <span asp-validation-for="@Model.End" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Opret" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
